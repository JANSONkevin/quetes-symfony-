{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}

{% if programs %}
    <div class="container-fluide text-center">
      <div class="row">
        <h1 class="mb-5">Les dernières séries de la catégorie :
          {{ categories.name }}
        </h1>
  {% for program in programs %}
          <div class="card col m-5" style="width: 18rem;">
              <img src="{{program.poster}}" class="card-img-top" alt="{{ program.title }}">
              <div class="card-body">
                <h5 class="card-title">{{ program.title }}</h5>
                <p class="card-text">{{ program.summary }}</p>
                <a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
              </div>
            </div>
  {% else %}
      Aucune série trouvée.
  {% endfor %}
      </div>
  </div>
    {% endif %}
    <a href="{{ path('category_index') }}">
      Retour à la liste des catégories
    </a>

{% endblock %}
