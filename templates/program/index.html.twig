{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="container-fluide">
        <div class="row">
    {% for program in programs %}
        <div class="col-lg-2 col-md-4">
            <div class="card col m-3" style="width: 18rem;">
                <img src="{{program.poster}}" class="card-img-top" style="height: 300px;" alt="{{ program.title }}">
                <div class="card-body">
                  <h5 class="card-title">{{ program.title }}</h5>
                  <p class="card-text">{{ program.summary|slice(0, 80) }}...</p>
                  <a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
                </div>
              </div>
            </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
        </div>
    </div>
    <div class="text-center m-3">
        <a href="{{ path('app_index') }}"><h3>Retour à l'accueil</h3></a>
        </br>
        <a href="{{ path('program_new') }}"><h3>Ajouter une serie</h3></a>
    </div>
{% endblock %}
