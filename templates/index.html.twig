{% extends 'base.html.twig' %}
{% block body %}
	<h1>Bienvenue !</h1>
	<h2 class="text-center">Découvrez de nouvelles séries</h2>
	<div class="row">
		{% for program in programs | reverse %}
			<div class="col-lg-2 col-md-4">
				<div class="card col m-3" style="width: 18rem;">
					<img src="{{program.poster}}" class="card-img-top" style="height: 300px;" alt="{{ program.title }}">
					<div class="card-body">
						<h5 class="card-title">{{ program.title }}</h5>
						<p class="card-text">{{ program.summary|slice(0, 80) }}...</p>
						<a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
